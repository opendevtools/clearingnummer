{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es7", "esnext"],
    "allowJs": false,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": ["./lib/**/*"],
  "exclude": ["./lib/**/__tests__/*"]
}
